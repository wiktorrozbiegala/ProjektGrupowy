<Window x:Class="PGR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PGR"
        mc:Ignorable="d"
        Title="Puchatini"      
        WindowState="Maximized">
    <Grid>
        <TabControl>
            <TabItem Header="Puchatini">
                <Grid Background="#FFE5E5E5">
                    <DataGrid HorizontalAlignment="Left" Height="399" Margin="10,52,0,0" VerticalAlignment="Top" Width="133" ItemsSource="{Binding MyList}"  AutoGenerateColumns="False">
                        <DataGridTextColumn Header="Param" Binding="{Binding Param}"/>
                        <DataGridTextColumn Header="Value" Binding="{Binding Value}"/>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
